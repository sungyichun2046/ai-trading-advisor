# Database Configuration
POSTGRES_DB=trading_advisor
POSTGRES_USER=trader
POSTGRES_PASSWORD=your_secure_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://trader:your_secure_password@localhost:5432/trading_advisor

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Keys (Get from respective providers)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
POLYGON_API_KEY=your_polygon_key

# Security
SECRET_KEY=your_super_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=240

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
MAX_RISK_PER_TRADE=0.02
MAX_PORTFOLIO_RISK=0.20
DAILY_LOSS_LIMIT=0.06

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://trader:your_secure_password@localhost:5432/airflow
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/dags
AIRFLOW__CORE__LOAD_EXAMPLES=False